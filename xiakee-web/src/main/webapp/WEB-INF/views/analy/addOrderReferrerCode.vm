#set($page_title="设置订单追踪埋点")
#set($layout="layout.vm")
#include("analy/menu.vm")
<div id="signup-box" class="signup-box widget-box no-border">
	<div class="widget-body">
		<div class="widget-main">
			<form action="addOrderReferrerCode.do" method="post">
			<h4 class="header green lighter bigger">订单追踪埋点设置</h4>
				<fieldset>
					<div class="row show-grid">
						<div class="col-md-7">
							<label class="block clearfix "> <span
								class="block input-icon input-icon-right"> 追踪名称设置： <input
									type="text" class="form-control" name="title"
									value="" />
							</span>
							</label>
						</div>
						<div class="col-md-5">
							<label class="block clearfix"> 推广人或组织： <span
								class="block input-icon input-icon-right"> <input
									type="text" class="form-control" name="promotion" value="${name}" />
							</span>
							</label>
						</div>
					</div>

					<div class="row show-grid">
						<div class="col-md-12">
							<label class="block clearfix"> <span
								class="block input-icon input-icon-right"> 备注： 
								<textarea rows="5" class="form-control" name="remark"></textarea>
							</span>
							</label>
						</div>
					</div>

					<div class="clearfix">
						<button type="submit"
							class="width-100 btn btn-sm btn-success">
							确定 <i class="icon-arrow-right icon-on-right"></i>
						</button>
					</div>
			</fieldset>	
			</form>
		</div>
	</div>
	<!-- /widget-body -->
</div>
<!-- /signup-box -->
</div>
<!-- /position-relative -->